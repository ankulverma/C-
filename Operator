#include<iostream>
#include<conio.h>
#include<iomanip>
#include<bitset>
using namespace std;

void main() {
	bool b = false;
	cout << b<<endl;
	cout << boolalpha << b<<endl;
	cout << boolalpha << (bool)1<<endl;
	cout << (bool)1 << ", " << (bool) 10;
	//cout << "Are you sure ? (true/false) :";
	//cin >> boolalpha >> b<<endl;
	cout << b<<endl;
	cout << bitset<16>(25);
	getch();
}

