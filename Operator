/*
void swap1(int a, int b) {
	int t;
	t = a;
	a = b;
	b = t;
}

void swap2(int &a, int &b) {
	int t;
	t = a;
	a = b;
	b = t;
}

void swap3(int *a, int *b) {
	int t;
	t = *a;
	*a = *b;
	*b = t;
}

void main() {
	int x=10, y=20;
	cout <<endl << x << ", " << y;
	swap1(x,y); //call by value
	cout <<endl << x << ", " << y;
	swap2(x,y); //call by reference
	cout <<endl << x << ", " << y;
	swap3(&x,&y); //call by address/pointer
	cout <<endl << x << ", " << y;
	getch();
}

/*
char * resize(char *p, int os, int ns) {
	char *q;
	int n= (os>ns) ? os : ns;
	q = new char[n];
	int i=0;
	for(i=0;i<n;i++) {
		q[i] = p[i];
	}
	delete []p;
	return q;
}

void main() {
	char *p = new char[1];
	for(int i=0;i<10;i++) {
		char t = getch();
		cout << "*";
		if(t == '\r') {
			p[i] = '\0';
			break;
		}
		else {
			p[i] = t;
			p = resize(p, i+1,i+2);
			p[i+1] = '\0';
		}
	}
	cout << "Your Password is :" << p;
	getch();
}

